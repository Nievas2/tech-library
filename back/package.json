{
  "name": "open-library",
  "version": "1.0.0",
  "description": "Backend del proyecto de libreria ",
  "main": "index.js",
  "scripts": {
    "test": "test",
    "build": "rimraf ./dist && rimraf ./src/migrations && tsc && npm run copy-files",
    "copy-files": "copyfiles -u 1 src/public/* dist/",
    "start": "node dist/server.js",
    "start:dev": "tsc && npm run copy-files && concurrently \"tsc -w\" \"nodemon dist/server.js\"",
    "typeorm": "typeorm-ts-node-commonjs -d ./src/config/data.source.ts",
    "m:gen": "npm run typeorm migration:generate",
    "m:run": "npm run typeorm migration:run",
    "db:create": "rimraf ./src/migrations && npm run m:gen -- src/migrations/CreateDb && npm run m:run"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.10.1",
    "open-library": "file:",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@express-rate-limit/tsconfig": "^1.0.2",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/passport": "^1.0.16",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.3",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  }
}
